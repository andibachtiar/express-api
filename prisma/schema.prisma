datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  username  String @unique
  name      String
  password  String

  @@map("users")
}

model Address {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  street      String
  city        String
  province    String
  country     String
  postal_code Int
}

model Contact {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  first_name  String
  last_name   String
  email       String
  phone       String
}

